{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "esbuild src/**/*.ts --outdir=out --platform=node --format=cjs && node ./out/main.js | pino-pretty",
    "build": "esbuild src/main.ts --bundle --minify --platform=node --outdir=dist",
    "format": "prettier ./src --write"
  },
  "dependencies": {
    "express": "4.18.3",
    "mongodb": "6.4.0",
    "pino": "8.19.0"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/node": "20.11.26",
    "esbuild": "0.20.1",
    "pino-pretty": "10.3.1",
    "prettier": "3.2.5",
    "typescript": "5.4.2"
  }
}
