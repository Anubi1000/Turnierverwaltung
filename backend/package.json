{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "esbuild src/**/*.ts --outdir=out --platform=node --format=esm --target=ES2022 && node ./out/main.js | pino-pretty",
    "build": "esbuild src/main.ts --bundle --minify --platform=node --format=esm --target=ES2022 --outdir=dist",
    "format": "prettier ./src --write",
    "genApiTypes": "node ../api/generateTypeDefinitions.mjs ../api/spec.json ./src/api-types.d.ts",
    "test": "vitest run"
  },
  "dependencies": {
    "express": "4.18.3",
    "joi": "17.12.2",
    "mongodb": "6.5.0",
    "pino": "8.19.0",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/node": "20.11.30",
    "@types/supertest": "6.0.2",
    "@types/uuid": "9.0.8",
    "esbuild": "0.20.2",
    "pino-pretty": "10.3.1",
    "prettier": "3.2.5",
    "supertest": "6.3.4",
    "typescript": "5.4.2",
    "vitest": "1.4.0"
  }
}
